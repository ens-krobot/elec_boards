tempsMort_CONTROL_REG:                 equ 0x43   ; Control register
tempsMort_FUNC_REG:                    equ 0x40   ; Function register
tempsMort_INPUT_REG:                   equ 0x41   ; Input register
tempsMort_OUTPUT_REG:                  equ 0x42   ; Output register


